<section class="cart">
<% if (session.cart) { %>
 

    <div class="order container mx-auto w-1/2  py-16">
        <div class="flex items-center border-b border-gray-300 pb-4 ">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summery</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            
            
            <div class="flex items-center my-8">
                <img src="/img/<%=pizza.item.image%>" alt="" class="w-24">
                <div class="ml-4 flex-1">
                    <h1><%=pizza.item.name%></h1>
                    <span><%=pizza.item.size%></span>
                </div>
                <span class="flex-1"><%=pizza.qty%> Pcs</span>
                <span class="font-bold text-lg">$<%=pizza.item.price*pizza.qty%></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right">
            <div >
                <span class="text-lg font-bold">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2">$<%=session.cart.totalPrice%></span>
            </div>
            <div>
                <form class="mt-12">
                    <input type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone Number">
                    <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
<div><button type="submit" class="btn-primary px-6 py-2 rounded-full mt-6 font-bold text-white">Order now</button></div>
                </form>
                <!-- <a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full mt-6 font-bold text-white">Login to continue</a> -->
            </div>
        </div>
    </div>
<% }else{ %>
    <div class="empty-cart  py-16">

    <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
        <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br> 
        To order a pizza go to the mian page
        </p>
        <img src="/img/empty-cart.png" alt="empty-cart" class="w-2/5 mx-auto">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
    </div>
    
    </div>
    <%}%>
</section>